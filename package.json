{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "author": "XeryYue",
  "main": "index.js",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "cli": "cd packages/cli && yarn tsc",
    "compile": "lerna exec --scope @fect-ui/vue -- yarn build",
    "collect": "lerna exec --scope @fect-ui/vue -- yarn collect",
    "icon":"lerna exec --scope @fect-ui/vue-icons -- yarn build",
    "hooks": "cd packages/vue-hooks && yarn build",
    "test": "cd packages/vue &&  yarn test",
    "dev": "lerna exec --scope @fect-ui/website -- yarn dev",
    "clean": "lerna clean --yes",
    "commit": "git-cz",
    "lint": "non lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "vue": "^3.2.20",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": [
      "kagura"
    ]
  }
}
